CREATE TABLE dbSyncStatus (
    watchId TEXT PRIMARY KEY,
    fullySynced INTEGER NOT NULL,
    lastFullySynced INTEGER NOT NULL
);

insert:
   REPLACE INTO dbSyncStatus VALUES ?;

invalidateAllWatches:
   UPDATE dbSyncStatus SET fullySynced = 0;

isAnyWatchPendingSync:
    SELECT COUNT(*) FROM dbSyncStatus WHERE fullySynced = 0 AND lastFullySynced > :lastSyncDeadline;

getPendingSyncWatches:
    SELECT watchId FROM dbSyncStatus WHERE fullySynced = 0 AND lastFullySynced > :lastSyncDeadline;
